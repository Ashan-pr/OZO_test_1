<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/first"
    android:background="#202020">


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#898989"
        android:layout_alignBottom="@+id/btnMoodle"
        android:layout_margin="25dp"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#898989"
        android:layout_alignBottom="@+id/btnTuto"
        android:layout_margin="25dp"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#898989"
        android:layout_alignBottom="@+id/btnWiki"
        android:layout_margin="25dp"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#898989"
        android:layout_alignBottom="@+id/btnStackOverflow"
        android:layout_margin="25dp"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#898989"
        android:layout_alignBottom="@+id/btnW3Cschools"
        android:layout_margin="25dp"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/MainMenuButtonText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMoodle"
        android:background="@drawable/btn_green"
        android:text="moodle"
        android:layout_above="@+id/btnTuto"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="@style/MainMenuButtonText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnTuto"
        android:background="@drawable/btn_green"
        android:text="Tutorails point"
        android:layout_above="@+id/btnWiki"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="@style/MainMenuButtonText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnWiki"
        android:background="@drawable/btn_green"
        android:text="Wikipedia"
        android:layout_above="@+id/btnStackOverflow"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="@style/MainMenuButtonText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnStackOverflow"
        android:background="@drawable/btn_green"
        android:text="Stack overflow"
        android:layout_above="@+id/btnW3Cschools"
        android:layout_centerHorizontal="true"
         />
    <Button
        style="@style/MainMenuButtonText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnW3Cschools"
        android:background="@drawable/btn_green"
        android:text="W3Cschools"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FIT KIT"
        android:id="@+id/txtAppName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:textColor="#fffdfd"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rate app"
        android:id="@+id/txtRate"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff2228"
        android:clickable="true" />

</RelativeLayout>
